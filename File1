<!-- Java -->
<script>
	
	function handleSubmit(event) {
		event.preventDefault ();
		alert ("Congrats!");
	}

	function changeColor(event) {
		event.target.style.backgroundColor = "#0099ff";
		event.target.style.color = "#cc0066";
	}
	function removeColor(event) {
		event.target.style.backgroundColor = null;
		event.target.style.color = null;
	}

	//Native Approach
		const submitBut = document.getElementById ("submit");
		submitBut.addEventListener ("mouseenter", changeColor);
		submitBut.addEventListener ("mouseleave", removeColor);
		submitBut.addEventListener ("click", handleSubmit);

let animalOne= document.getElementById ("animalOne");
